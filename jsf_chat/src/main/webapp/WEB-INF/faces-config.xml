<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
	  <message-bundle>
	  	<!-- If customizing messages -->
	  </message-bundle>
     </application>
    <!-- Login page -->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LOGIN_SUCCESS</from-outcome>
            <to-view-id>/jsf/chatroom.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LOGIN_FAIL</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
    
    
    <!-- ChatRoom page -->
    <navigation-rule>
        <from-view-id>/jsf/chatroom.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>LOGOUT_SUCCESS</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
      
    </navigation-rule>   
    
    <!-- Register page -->
    <navigation-rule>
      <from-view-id>/jsf/register.xhtml</from-view-id>
      <navigation-case>
          <from-outcome>home</from-outcome>
          <to-view-id>/index.xhtml</to-view-id>
      </navigation-case>
      <navigation-case>
          <from-outcome>REGISTER_SUCCESS</from-outcome>
          <to-view-id>/index.xhtml</to-view-id>
          <redirect/>
      </navigation-case>
      <navigation-case>
          <from-outcome>REGISTER_FAIL</from-outcome>
          <to-view-id>/jsf/register.xhtml</to-view-id>
      </navigation-case>
    </navigation-rule>   
</faces-config>
